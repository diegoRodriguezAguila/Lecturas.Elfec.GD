<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:gravity="top"
    android:padding="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lbl_ordenative_code"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_primary"
        android:gravity="center"
        android:text="@string/sample_ord_code"
        android:textAppearance="@style/TextAppearance.CustomFont.Light"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lbl_ordenative_description"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/background_material_dark"
        android:text="@string/sample_ord_desc"
        android:textSize="16sp" />

</LinearLayout>