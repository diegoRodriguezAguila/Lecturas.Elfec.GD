<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:padding="@dimen/nav_drawer_horizontal_padding" >

    <TextView
        android:layout_marginTop="@dimen/list_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_no_readings"
        android:textAppearance="@style/TextAppearance.CustomFont.Light"
        android:textColor="@color/background_material_dark"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/lbl_no_readings_help"
        android:textAppearance="@style/TextAppearance.CustomFont.Light"
        android:textColor="@color/background_material_dark"
        android:textSize="15sp" />

</LinearLayout>