<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_height"
    android:paddingLeft="@dimen/listview_padding"
    android:paddingRight="@dimen/listview_padding"
    android:paddingTop="@dimen/listview_padding" >

    <ListView
        android:id="@+id/list_ordenatives"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_height"
        android:choiceMode="multipleChoice"
        android:divider="@color/border_soft_gray"
        android:dividerHeight="1.5dp"
        android:fastScrollEnabled="true"
        android:orientation="vertical"
        android:smoothScrollbar="true" />

</LinearLayout>