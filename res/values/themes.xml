<resources>
    <style name="AppCustomTheme" parent="AppCustomTheme.Base"/>

    <style name="AppCustomTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/color_control_activated</item>
        <item name="colorControlHighlight">@color/color_control_hightlight</item>
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="buttonStyle">@style/AppStyle.Button</item>
        <item name="editTextStyle">@style/AppStyle.EditText</item>
        
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_material</item>
		<item name="android:textSelectHandleRight">@drawable/text_select_handle_right_material</item>
		<item name="android:textSelectHandle">@drawable/text_select_handle_middle_material</item>
        
        <item name="android:actionBarStyle">@style/AppStyle.ActionBar</item>
        <item name="actionBarStyle">@style/AppStyle.ActionBar</item>
        <item name="homeAsUpIndicator">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/background_gray</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="icon">@drawable/ic_launcher</item>
        
        <item name="alertDialogProTheme">@style/AppStyle.Dialog.FlavoredMaterialLight</item>
    </style>
</resources>
